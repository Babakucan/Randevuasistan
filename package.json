{
  "name": "randevuasistan",
  "version": "1.0.0",
  "description": "Kuaförlere özel yapay zeka destekli randevu yönetim sistemi",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "test": "cd frontend && npm test",
    "test:frontend": "cd frontend && npm test",
    "lint": "cd frontend && npm run lint",
    "lint:frontend": "cd frontend && npm run lint",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "prepare": "husky install || true"
  },
  "keywords": [
    "randevu",
    "kuaför",
    "ai",
    "whatsapp",
    "telefon",
    "yönetim",
    "nextjs",
    "typescript"
  ],
  "author": "Randevuasistan Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/username/randevuasistan.git"
  },
  "bugs": {
    "url": "https://github.com/username/randevuasistan/issues"
  },
  "homepage": "https://github.com/username/randevuasistan#readme",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "husky": "^8.0.3",
    "prettier": "^3.1.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "workspaces": [
    "frontend",
    "backend",
    "shared"
  ]
}
